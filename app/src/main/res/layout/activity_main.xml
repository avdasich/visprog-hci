<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="end|center_vertical"
        android:textSize="40sp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:ellipsize="start"
        android:text=""
        android:singleLine="true"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="end|center_vertical"
        android:textSize="50sp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:ellipsize="start"
        android:text=""
        android:singleLine="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/but_clear"
            style="@style/Operations_Sci"
            android:text="AC"/>

        <TextView
            android:id="@+id/but_plus_minus"
            style="@style/Operations_Sci"
            android:text="+/-"/>

        <TextView
            android:id="@+id/but_percent"
            style="@style/Operations_Sci"
            android:text="%"/>

        <TextView
            android:id="@+id/but_division"
            style="@style/Operations"
            android:text="÷"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/but_7"
            style="@style/Numbers"
            android:text="7"/>

        <TextView
            android:id="@+id/but_8"
            style="@style/Numbers"
            android:text="8"/>

        <TextView
            android:id="@+id/but_9"
            style="@style/Numbers"
            android:text="9"/>

        <TextView
            android:id="@+id/but_mult"
            style="@style/Operations"
            android:text="×"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/but_4"
            style="@style/Numbers"
            android:text="4"/>

        <TextView
            android:id="@+id/but_5"
            style="@style/Numbers"
            android:text="5"/>

        <TextView
            android:id="@+id/but_6"
            style="@style/Numbers"
            android:text="6"/>

        <TextView
            android:id="@+id/but_minus"
            style="@style/Operations"
            android:text="−"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/but_1"
            style="@style/Numbers"
            android:text="1"/>

        <TextView
            android:id="@+id/but_2"
            style="@style/Numbers"
            android:text="2"/>

        <TextView
            android:id="@+id/but_3"
            style="@style/Numbers"
            android:text="3"/>

        <TextView
            android:id="@+id/but_plus"
            style="@style/Operations"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/but_0"
            style="@style/Numbers"
            android:layout_weight="2"
            android:text="0"/>

        <TextView
            android:id="@+id/but_dot"
            style="@style/Numbers"
            android:text="."/>

        <TextView
            android:id="@+id/but_equals"
            style="@style/Operations"
            android:text="="/>
    </LinearLayout>

</LinearLayout>
