<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--ввод-->
    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@android:color/white"
        android:gravity="end|center_vertical"
        android:textSize="42sp"
        android:padding="20dp"
        android:singleLine="true"
        android:ellipsize="start"/>

    <!--res-->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#AAAAAA"
        android:gravity="end|center_vertical"
        android:textSize="34sp"
        android:padding="20dp"
        android:singleLine="true"
        android:ellipsize="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp">

        <!--1 ряд-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView style="@style/ActionButton" android:id="@+id/but_clear" android:text="AC"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_open_bracket" android:text="("/>
            <TextView style="@style/NumberButton" android:id="@+id/but_close_bracket" android:text=")"/>
            <TextView style="@style/ActionButton" android:id="@+id/but_division" android:text="÷"/>
        </LinearLayout>

        <!--2 ряд-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView style="@style/NumberButton" android:id="@+id/but_7" android:text="7"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_8" android:text="8"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_9" android:text="9"/>
            <TextView style="@style/ActionButton" android:id="@+id/but_mult" android:text="×"/>
        </LinearLayout>

        <!--3 ряд-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView style="@style/NumberButton" android:id="@+id/but_4" android:text="4"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_5" android:text="5"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_6" android:text="6"/>
            <TextView style="@style/ActionButton" android:id="@+id/but_minus" android:text="−"/>
        </LinearLayout>

        <!--4 ряд-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView style="@style/NumberButton" android:id="@+id/but_1" android:text="1"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_2" android:text="2"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_3" android:text="3"/>
            <TextView style="@style/ActionButton" android:id="@+id/but_plus" android:text="+"/>
        </LinearLayout>

        <!--5 ряд-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView style="@style/NumberButton" android:id="@+id/but_0" android:text="0"/>
            <TextView style="@style/NumberButton" android:id="@+id/but_dot" android:text="."/>
            <TextView style="@style/ActionButton" android:id="@+id/but_equals" android:text="="/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
